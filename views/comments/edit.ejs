<% include ./../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit Comment <%= %></h1>
        <div class="col-sm-6 col-sm-offset-3">
            <!--zmieniamy w route camgrpound._id na campground_id bo jest potrzebne tylko id wiec to id pochodzi z req.param.id a nie z bazy danych-->
            <form action="/campgrounds/<%= campground_id%>/comments/<%=comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%=comment.text%>">
                </div>
                
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit</button>
                </div>
          </form>
           <a href="/campgrounds/<%=campground_id%>">Back</a>
        </div>
    </div>
</div>

<% include ./../partials/footer %>